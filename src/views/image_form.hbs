<style>
    .boton{
        background-color: #34675c;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col s12 card z-depth-4">
            <form action="/images/add" method="POST" enctype="multipart/form-data">
                <div class="input-field col s6">
                    <input id="title" type="text" name="title" class="validate">
                    <label for="title">Title</label>
                </div>
                <div class="input-field col s6">
                    <textarea name="description" id="textarea1" class="materialize-textarea" data-length="120"></textarea>
                    <label for="textarea1">Image description</label>
                </div>
                <div class="file-field input-field col s12">
                    <div class="btn boton">
                        <span>Image</span>
                        <input type="file" name="image">
                    </div>
                    <div class="file-path-wrapper">
                        <input placeholder="select image" class="file-path validate center-align" type="text">
                    </div>
                </div>
                <div class="input-field col s6">
                     <button class="btn boton waves-effect waves-light" type="submit">Submit
                        <i class="material-icons right">send</i>
                     </button>
                </div>
            </form>
        </div>
    </div> 
    <div class="col s6 card z-depth-4">
        <table>
        <thead>
          <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Operations</th>
          </tr>
        </thead>

        <tbody>
          {{#each photos}}
            {{#each this}}
                {{#if this.title}}
                    <tr>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>
                        <a href="{{imageURL}}" class="waves-effect waves-light btn boton">View</a>
                        <a href="/images/delete/{{_id}}" class="waves-effect waves-light btn boton">Delete</a>
                    </td>
                </tr>    
                {{/if}}
            {{/each}}
          {{/each}}
        </tbody>
      </table>
    </div>
</div>   
    